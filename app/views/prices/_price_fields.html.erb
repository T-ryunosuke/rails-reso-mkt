<!-- パラメータをネストして送る -->
<div id="price_field_<%= price.id %>" class="flex items-center justify-between w-5/6 sm:w-2/3 my-4 mx-auto py-2 px-4 border-b border-black/50 text-sm">
  <p><%= price.item.name %>：</p>
  <%= hidden_field_tag "prices[#{price.id}][name]", price.item.name %>
  <div class="flex">
    <%= label_tag "prices[#{price.id}][price_percentage]", "価格率" %>
    <%= number_field_tag "prices[#{price.id}][price_percentage]", price.price_percentage, class: "w-12 mx-1 pl-1 border rounded", min: 80, max: 150 %>%
  </div>
  <div class="flex">
    <%= label_tag "prices[#{price.id}][trend]", "動向" %>
    <%= select_tag "prices[#{price.id}][trend]",
      options_for_select([["↗︎", "true"], ["↘", "false"]], price.trend),
      class: "ml-1 px-1 border rounded"
    %>
  </div>
</div>
